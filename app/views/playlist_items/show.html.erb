
<div class="page-header">

<div class="listen" style="float: right">
  <%= link_to image_tag("icon_spotify.png", :valign => 'sub') + " Visa i Spotify", @playlist_item.track.href, { :class => 'button listen' } %>
</div>

<%= image_tag @playlist_item.track.cover_url || 'cover_unknown.png', {:class => 'artist_cover', :width => 64} %>

<h2><%= @playlist_item.track.artist %></h2>
<h1><%= @playlist_item.track.name %></h1>

<div class="album">
  <%= @playlist_item.track.album %>
</div>

</div>

<p>
  Längd:
  <%= @playlist_item.track.length_as_string %>
</p>

