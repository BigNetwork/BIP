<h3>Finns i <%= @playlist_item.track.playlists.count %> spellistor:</h3>

<ul>
	<% unless @playlist_item.track.blank? %>
  <% @playlist_item.track.playlists.each do |playlist| %>
		<li><%= link_to playlist.name, playlist %></li>
	<% end %>
  <% end %>
</ul>

